<form
      action="<%= submitUrl %>?_csrf=<%= locals.csrfToken %>" method="POST"
      enctype="multipart/form-data">
      <p>
        <label for="title">Title</label>
        <input
          type="text" id="title" name="title"
          value="<%= product ? product.title : '' %>"
          required />
      </p>
      <p>
        <label for="image">Image</label>
        <input
          type="file" id="image" name="image"
          accept="image/png,image/jpg,image/jpeg"
          required />
      </p>
      <p>
        <label for="summary">Summary</label>
        <input
          type="text" id="summary" name="summary"
          value="<%= product ? product.summary : '' %>"
          required maxlength="250" />
      </p>
      <p>
        <label for="price">Price</label>
        <input
          type="number" id="price" name="price"
          value="<%= product ? product.price : '' %>"
          min="0.01" step="0.01"
          required maxlength="250" />
      </p>
      <p>
        <label for="description">Description</label>
        <textarea
          id="description" name="description" rows="7"
          required
        ><%= product ? product.description : '' %></textarea>
      </p>
      <p>
        <button class="btn btn-alt" type="reset">Reset</button>
        <button class="btn" type="submit">Save</button>
      </p>
    </form>
