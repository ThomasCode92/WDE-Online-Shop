<%- include('../../shared/includes/head', { pageTitle: 'Login' }) %>
  <link rel="stylesheet" href="/styles/forms.css" />
  <link rel="stylesheet" href="/styles/auth.css" />
</head>
<body>
  <%- include('../../shared/includes/header') %>
  <main>
    <h1>Login</h1>
    <% if (inputData && inputData.errorMessage) { %>
      <section class="alert">
        <h2>Invalid Credentials</h2>
        <p><%= inputData.errorMessage %></p>
      </section>
    <% } %>
    <form action="/auth/login" method="POST">
      <p>
        <label for="email">Email</label>
        <input
          type="email" id="email" name="email"
          value="<%= inputData ? inputData.enteredData.email : '' %>"
          required />
      </p>
      <p>
        <label for="password">Password</label>
        <input
          type="password" id="password" name="password"
          value="<%= inputData ? inputData.enteredData.password : '' %>"
          required minlength="6" />
      </p>
      <input
        type="hidden" name="_csrf"
        value="<%= locals.csrfToken %>" />
      <button class="btn">Login</button>
      <p id="switch-form"><a href="/auth/signup">Create a new user</a></p>
    </form>
  </main>
<%- include('../../shared/includes/footer') %>
 