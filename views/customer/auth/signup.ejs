<%- include('../../shared/includes/head', { pageTitle: 'Signup' }) %>
  <link rel="stylesheet" href="/styles/forms.css" />
  <link rel="stylesheet" href="/styles/auth.css" />
</head>
<body>
  <%- include('../../shared/includes/header') %>
  <main>
    <h1>Create New Account</h1>
    <% if (inputData && inputData.errorMessage) { %>
      <section class="alert">
        <h2>Invalid Input</h2>
        <p><%= inputData.errorMessage %></p>
      </section>
    <% } %>
    <form action="/auth/signup" method="POST">
      <p>
        <label for="email">Email</label>
        <input
          type="email" id="email" name="email"
          value="<%= inputData ? inputData.enteredData.email : '' %>"
          required />
      </p>
      <p>
        <label for="confirm-email">Confirm Email</label>
        <input
          type="email" id="confirm-email" name="confirm-email"
          value="<%= inputData ? inputData.enteredData.confirmedEmail : '' %>"
          required />
      </p>
      <p>
        <label for="password">Password</label>
        <input
          type="password" id="password" name="password"
          value="<%= inputData ? inputData.enteredData.password : '' %>"
          required minlength="6" />
      </p>
      <hr />
      <p>
        <label for="fullname">Full Name</label>
        <input
          type="text" id="fullname" name="fullname"
          value="<%= inputData ? inputData.enteredData.fullname : '' %>"
          required />
      </p>
      <p>
        <label for="street">Street</label>
        <input
          type="text" id="street" name="street"
          value="<%= inputData ? inputData.enteredData.street : '' %>"
          required />
      </p>
      <p>
        <label for="postal">Postal Code</label>
        <input
          type="text" id="postal" name="postal"
          value="<%= inputData ? inputData.enteredData.postal : '' %>"
          required minlength="4" />
      </p>
      <p>
        <label for="city">City</label>
        <input
          type="text" id="city" name="city"
          value="<%= inputData ? inputData.enteredData.city : '' %>"
          required />
      </p>
      <input
        type="hidden" name="_csrf"
        value="<%= locals.csrfToken %>" />
      <button class="btn">Create Account</button>
      <p id="switch-form"><a href="/auth/login">Login instead</a></p>
    </form>
  </main>
<%- include('../../shared/includes/footer') %>
 